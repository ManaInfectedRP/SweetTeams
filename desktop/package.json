{
  "name": "sweetteams-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "cross-env APP_URL=https://localhost:5173 electron .",
    "build": "electron-builder --win --x64",
    "build:all": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.sweetteams.app",
    "productName": "SweetTeams",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "../client/dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "28.2.0",
    "electron-builder": "^26.4.0"
  }
}
